<%= form_with model: @event do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>
  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_field :date %>
  </div>
  <div class="field">
    <%= form.label :is_private %>
    <%= form.check_box :is_private %>
  </div>
  <div class="field"><%= form.submit %></div>
<% end %>